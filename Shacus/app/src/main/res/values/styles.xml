
<resources>

    <!-- Base application theme. parent="Theme.AppCompat.Light.NoActionBar"-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/gray_8f</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/gray_cc</item>
        <!--toolbar文字的颜色-->
        <item name="@android:textColorPrimary">@color/black</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/white</item>
        <!--toolbar上菜单文字的颜色-->
        <item name="actionMenuTextColor">@color/pink</item>
        <item name="colorAccent">@color/brown</item>
    </style>


    <!--4,4 以上沉浸式使用-->
    <style name="activity_chenjinshi">
        <item name="android:clipToPadding">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 约拍导航页面的style -->
    <style name="BannerDefaultStyle">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <!-- 自定义属性在styles.xml中不需要命名空间,直接用属性名就可以了 -->
        <!-- 开启自动轮播 -->
        <item name="banner_pointAutoPlayAble">true</item>
        <!-- 自动轮播的时间间隔 -->
        <item name="banner_pointAutoPlayInterval">4096</item>

        <!-- 指示点容器背景 -->
        <item name="banner_pointContainerBackground">#88aaaaaa</item>
        <!-- 指示点背景 -->
        <item name="banner_pointDrawable">@drawable/bga_banner_selector_point_hollow</item>
        <!-- 指示点容器左右内间距 -->
        <item name="banner_pointContainerLeftRightPadding">10dp</item>
        <!-- 指示点上下外间距 -->
        <item name="banner_pointTopBottomMargin">6dp</item>
        <!-- 指示点左右外间距 -->
        <item name="banner_pointLeftRightMargin">3dp</item>
        <!-- 指示点的位置 -->
        <item name="banner_indicatorGravity">bottom|right</item>
        <!-- 页码切换过程的时间长度 -->
        <item name="banner_pageChangeDuration">800</item>
        <!-- 提示文案的文字大小 -->
        <item name="banner_tipTextSize">12sp</item>
        <!-- 提示文案的文字颜色 -->
        <item name="banner_tipTextColor">@android:color/white</item>
        <!-- 加载网络数据时覆盖在BGABanner最上层的占位图 -->
        <item name="banner_placeholderDrawable">@drawable/holder</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/zero_black</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/zero_black</item>
        <!--溢出菜单样式 -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">true</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:popupBackground">#84000000</item>
        <item name="android:dropDownVerticalOffset">54dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
    </style>

    //float style
    <style name="lable_style">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    //guide
    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- 指示点背景 -->
        <item name="banner_pointDrawable">@drawable/guide_banner_selector_point_hollow</item>
    </style>

    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AlertDialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <!-- 这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <!--item name="android:topDark">@color/zero_black</item-->
        <!-- 这里是修改内容区域背景颜色 -->
        <item name="android:centerDark">@color/pink</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="ImageContainer">
        <item name="android:background">@color/ff_white</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:textColor">@color/zero_black</item>
    </style>
</resources>


